<Widget>:
    canvas.before:
        Color:
            rgba: 0, 0, 1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    color: 1, 0, 0, 1

<Button>:
    canvas.after:
        Color:
            rgba: 0, 1, 0, 1


BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input
            multiline: False

        BoxLayout:
            orientation: 'vertical'

            Button:
                id: up_btn
                text: 'Up'
                on_press: app.handle_increment(input.text, 1)

            Button:
                id: down_btn
                text: 'Down'
                on_press: app.handle_increment(input.text, -1)

    Button:
        id: convert_btn
        text: 'Convert m to km'
        on_press: app.handle_convert(input.text)

    Label:
        id: output
        color: (1, 0.5, 0.7, 1)
